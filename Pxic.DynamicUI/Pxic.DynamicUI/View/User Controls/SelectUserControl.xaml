<UserControl x:Class="Pxic.DynamicUI.View.User_Controls.SelectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pxic.DynamicUI.View.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ComboBox Height="36" HorizontalContentAlignment="Right" VerticalAlignment="Center" Padding="5" FontSize="16"
              ItemsSource="{Binding ItemCollection, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
              SelectedValue="{Binding SelectedMember, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
              DisplayMemberPath="Value" SelectedValuePath="Key"/>
</UserControl>
