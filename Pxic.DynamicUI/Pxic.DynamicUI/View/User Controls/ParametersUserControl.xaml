<UserControl x:Class="Pxic.DynamicUI.View.User_Controls.ParametersUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pxic.DynamicUI.View.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox VerticalAlignment="Top" Margin="5" Padding="5" Header="Choose Color">
        <StackPanel>
            <RadioButton>Blue</RadioButton>
            <RadioButton>Red</RadioButton>
            <RadioButton>Black</RadioButton>
            <RadioButton>Green</RadioButton>
            <Button>Save Settings</Button>
        </StackPanel>
    </GroupBox>
</UserControl>
